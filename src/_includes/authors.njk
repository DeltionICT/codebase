{% extends "layout.njk" %}
{% block authors %}
<h4 class="coursetitle">More....</h4>
<h2>Authors</h2>
<ul class="authors">
{% for author in authors %}
    <li><a href="{{ '/authors/' | url }}{{ author.key | slug }}/">{{ author.name }}</a></li>
{% endfor %}
</ul>
<h2>Technologies</h2>
<ul>
{% for technology in technologies %}
    <li>
        <a href="{{ '/technologies/' | url }}{{ technology.key | slug }}/">({{ technology.key }}) - {{ technology.name }}</a>
    </li>
{% endfor %}
</ul>
{% endblock %}