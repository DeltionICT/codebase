{% extends "layout.njk" %}
{% block title %}
{% for p in collections[tags] %}
    {% if p.url == page.url %}
        <h4 class="coursetitle">{{ p.data.coursetitle }}</h4>
        <div class="author">{{ authors | getAuthors(p.data.author) }} | {{ p.data.date | date("MMM, YYYY") }}</div>
        <h1>{{ p.data.title }}</h1>
    {% endif %}
{% endfor %}
{% endblock %}